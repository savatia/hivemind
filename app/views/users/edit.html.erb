<% provide :title, "Update Your Profile" %>
<div class="page-title">Update Your Profile</div>
<%= form_for(current_user, html: { multipart: true })  do |f|%>

	<% if current_user.avatar.url.nil? %>
		<img src="<%= image_url "default_avatar.png" %>" class="user-avatar"/>
	<% else %>
		<%= image_tag current_user.avatar.url if current_user.avatar? %>
	<% end %>
	<%= f.file_field :avatar %>

	<%= f.label :name %>
	<%= f.text_field :name, class: 'input-text input' %>

	<%= f.label :email %>
	<%= f.email_field :email, class: 'input' %>


	<%= f.label :about %>
	<%= f.text_area :about %>

	<%= f.label :signature %>
	<%= f.text_area :signature %>

	<%= f.label :password %>
	<%= f.password_field :password %>


	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation, class: 'form-control' %>

<%= f.submit "Save changes", class: "btn " %>
<% end %>