<% provide :title, "Close Post" %>
<div class="page-title">Close Post</div>
<%= form_for @closedpost do |f| %>
	<%= render 'layouts/error_messages', object: f.object %>
	You are closing the post "<%= @post.title %>"; Give a reason for the closure:
	<%= f.text_area :reason, class:"text-area" %>
	<%= f.hidden_field :post_id, value: @post.id %>
	<%= f.submit class:"btn"%>
<% end %>

