<% provide :title, @topic.name.camelcase %>
<div class="topics-container">
  <table class="topics-table">
	<thead>
	<tr>
	  <th class="topic-general" colspan="2">
		<%= @topic.name %>
	  </th>
	</tr>
	</thead>
	<tbody>
	<% @posts.each do |post| %>
		<tr><td><%= link_to post.title, topic_post_path(id: post.url, topic_id: @topic.url) ,class: "no-formatt blue-link" %><span class="float-right not-important">Views:<%= %> &nbsp; Replies:<%= Reply.where(post_id: post.id).size %> &nbsp;by&nbsp; <%= link_to User.find(post.user_id).name, "#", class:"blue-link no-formatt" %></span></td></tr>
	<% end %>
	</tbody>
  </table>
</div>
