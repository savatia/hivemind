<div id="topbar" class="topbar">
<%= link_to "HiveMind", root_url, class: "logo no-formatt", id: "logo" %>
  <ul>
	<li class="topbar-list">
	<%= link_to "About", static_pages_about_path, class: "topdar-links no-formatt" %>
	</li>
	<li class="topbar-list">
	<%= link_to "Help", static_pages_help_path, class: "topdar-links no-formatt" %>
	</li>
	<% if !current_user.nil? %>
		<li class="topbar-list">
		  <%= link_to "Account", "#", class: "topdar-links no-formatt" %>
			<ul class="account-links">
			  <li class="account-link">
				<%= link_to "Profile", user_path(current_user), class:"no-formatt"  %>
			  </li>
			  <li class="account-link">
				<%= link_to "Logout", logout_path, class:"no-formatt" , method: :delete %>
			  </li>
			  <li class="account-link">
				<%= link_to "Settings", edit_user_path(current_user), class:"no-formatt"  %>
			  </li>
			</ul>
		</li>
	<% else %>
		<li class="topbar-list">
		  <%= link_to "Login", login_path, class: "topdar-links no-formatt" %>
		</li>
	<% end %>
  </ul>

</div>