$(document).ready(function(){

	$('#answer_button').click(function(){
		$("#answer_wrapper").removeClass("hidden").addClass("show");
		$("#answer_button").hide();
		$('#answer_box').focus();
	});

	$(document).ajaxStart(function(){
		$('#loading').fadeIn().addClass("show").removeClass("hidden");
	});


